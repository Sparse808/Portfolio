---
layout: base.njk
---

<!-- Full-width Project Image -->
<div class="relative -mx-6 md:-mx-0 h-96 md:h-[500px] overflow-hidden rounded-3xl">
  <img
    src="{{ image }}"
    alt="{{ title }}"
    class="w-full h-full object-cover object-top rounded-2xl mt-6"
  />
</div>


<!-- Project Title -->
<div class="max-w-5xl mx-auto px-6 py-8">
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 text-center">
    {{ title }}
  </h1>
</div>

<!-- Markdown Content -->
<main class="prose prose-lg max-w-3xl mx-auto py-12 px-6">
  {{ content | safe }}
</main>
